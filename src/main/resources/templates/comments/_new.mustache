<div class="card">
    <div class="card m-2" id="comments-new">
        <div class="card-body">
            <!-- form to create a new comment -->
            <form>

                <!-- body input -->
                <div class="mb-3">
                    <label class="form-label">Content</label>
                    <textarea type="text" class="form-control" rows="3"
                    id="new-comment-body"></textarea>
                </div>
                <!-- hidden input -->
                <input type="hidden" id="board-id" value="{{boardId}}">
                {{#article}}
                    <input type="hidden" id="new-comment-article-id" value="{{id}}">
                {{/article}}
                <!-- submit button -->
                <button type="button" class="btn btn-primary" id="comment-create-btn">Write Comment</button>
            </form>
        </div>
    </div>
</div>

<script>
    {
        document.addEventListener("DOMContentLoaded", function() {
            const commentCreateBtn = document.querySelector("#comment-create-btn");

            commentCreateBtn.addEventListener("click", function() {
                const boardId = document.querySelector("#board-id")?.value;
                const articleId = document.querySelector("#new-comment-article-id")?.value;

                if (!boardId || !articleId) {
                    console.error("Board ID or Article ID not found!");
                    alert("Error: Could not find Board ID or Article ID.");
                    return;
                }

                // âœ… Ensure no `id` is included in new comments
                const comment = {
                    body: document.querySelector("#new-comment-body").value,
                    articleId: articleId  // Ensure correct article ID is sent
                };

                console.log("Sending comment data:", JSON.stringify(comment));

                const url = `/api/boards/${boardId}/articles/${articleId}/comments`;

                fetch(url, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify(comment)
                }).then(response => {
                    if (!response.ok) {
                        return response.json().then(data => {
                            alert("Failed to create comment: " + (data.message || "Unknown error"));
                            throw new Error("Failed to create comment");
                        });
                    }
                    alert("Comment created successfully!");
                    window.location.reload();
                }).catch(error => {
                    console.error("Error creating comment:", error);
                    alert("Unexpected error occurred!");
                });
            });
        });


    }
</script>